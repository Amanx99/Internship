<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="370dp">

                <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/viewpager"/>

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/circleindicator"
                    android:layout_marginTop="150dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom"
                    app:ci_margin="3dp"
                    app:ci_drawable="@drawable/ic_brightness_1_black_24dp"
                    app:ci_drawable_unselected="@drawable/ic_brightness_1_black"/>

                <include layout="@layout/toolbar_productpage"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="23dp">

                <customfonts.TextViewSFProDisplayRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chennai, India  .  2h ago"
                    android:textColor="#a9a9b0"
                    android:textSize="12sp"/>


                <LinearLayout
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <customfonts.MyTextView_SF_Pro_Display_Bold
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DJI Spark"
                        android:textSize="23sp"
                        android:textColor="#3b3b3b"/>

                    <ImageView
                        android:tint="#000000"
                        android:layout_marginTop="10dp"
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:src="@drawable/ic_rupee"/>

                    <customfonts.MyTextView_SF_Pro_Display_Bold
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50k"
                        android:textSize="23sp"
                        android:textColor="#3b3b3b"/>
                </LinearLayout>

                <View
                    android:layout_marginTop="21dp"
                    android:layout_marginBottom="21dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#1A979797"/>

                <customfonts.TextViewSFProDisplayRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:lineSpacingExtra="4dp"
                    android:text="Selling my 2017 DJI Spark. Barely used, pretty new in condition and its the â€œFly More Combo&quot;. No Negotiations please."
                    android:textColor="#a9a9b0"
                    android:textSize="12.3sp"/>

                <customfonts.TextViewSFProDisplayRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="19dp"
                    android:text="Seize the Moment. Meet Spark, a mini drone that features all of \ n  DJI&apos;s signature technologies, allowing you to seize the moment whenever you feel inspired."
                    android:textColor="#a9a9b0"
                    android:textSize="12.3sp"/>

                <customfonts.MyTextView_SF_Pro_Display_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Read More"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="12.3sp"
                    android:textColor="#3b3b3b"/>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginRight="20dp"
                    android:background="#A3979797"/>

            </LinearLayout>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <customfonts.MyTextView_SF_Pro_Display_Semibold
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/rect_blue"
                        android:layout_width="74dp"
                        android:layout_height="33dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="8dp"
                        android:gravity="center"
                        android:text="Buy Now"
                        android:textColor="#ffffff"
                        android:textSize="12sp"/>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>